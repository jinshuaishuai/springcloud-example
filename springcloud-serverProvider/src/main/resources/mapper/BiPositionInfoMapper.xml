<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jin.mapper.yc.BiPositionInfoMapper" >
    <resultMap id="BaseBiPositionInfoResultMap" type="com.jin.entity.DO.yc.PositionDO" >
        <id column="rec_id" property="recId" jdbcType="INTEGER" />
        <result column="position_name" property="positionName" jdbcType="VARCHAR" />
        <result column="dept_id" property="deptId" jdbcType="INTEGER" />
        <result column="status" property="status" jdbcType="BIT" />
        <result column="is_delete" property="isDelete" jdbcType="BIT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <insert id="addPosition" parameterType="com.jin.entity.DO.yc.PositionDO" >
        insert into bi_position_info
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="recId != null" >
                rec_id,
            </if>
            <if test="positionName != null" >
                position_name,
            </if>
            <if test="deptId != null" >
                dept_id,
            </if>
            <if test="status != null" >
                status,
            </if>
            <if test="isDelete != null" >
                is_delete,
            </if>
            <if test="createTime != null" >
                create_time,
            </if>
            <if test="updateTime != null" >
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="recId != null" >
                #{recId,jdbcType=INTEGER},
            </if>
            <if test="positionName != null" >
                #{positionName,jdbcType=VARCHAR},
            </if>
            <if test="deptId != null" >
                #{deptId,jdbcType=INTEGER},
            </if>
            <if test="status != null" >
                #{status,jdbcType=BIT},
            </if>
            <if test="isDelete != null" >
                #{isDelete,jdbcType=BIT},
            </if>
            <if test="createTime != null" >
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null" >
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>
    <update id="updatePosition" parameterType="com.jin.entity.DO.yc.PositionDO" >
        update bi_position_info
        <set >
            <if test="positionName != null" >
                position_name = #{positionName,jdbcType=VARCHAR},
            </if>
            <if test="deptId != null" >
                dept_id = #{deptId,jdbcType=INTEGER},
            </if>
            <if test="status != null" >
                status = #{status,jdbcType=BIT},
            </if>
            <if test="isDelete != null" >
                is_delete = #{isDelete,jdbcType=BIT},
            </if>
            <if test="createTime != null" >
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null" >
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where rec_id = #{recId,jdbcType=INTEGER}
    </update>

    <select id="getPositionList" resultMap="BaseBiPositionInfoResultMap" parameterType="int" >
        select distinct
            rec_id, position_name, dept_id,
            status, is_delete,
        DATE_FORMAT(create_time,'%Y-%m-%d %H:%i:%s') as create_time,
        DATE_FORMAT(update_time, '%Y-%m-%d %H:%i:%s') as update_time
        from bi_position_info
        <where>
           dept_id = #{deptId, jdbcType=INTEGER}
            and status = 0
        </where>
    </select>
</mapper>